//wxss

page {
  background: #ffffff;
}

.share-canvas {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 1;
}

.bg-canvas {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  background: #ffffff;
  border-bottom: 1px solid #ccc;
  z-index: 2;
}

.main-canvas {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 3;
}

.open-setting-bg,
.share-modal-bg {
  position: fixed;
  width: 100%;
  height: 100vh;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 9999;
}

.share-modal-bg .share-img {
  margin-left: 10%;
  margin-top: 10vh;
  background: #ffffff;
  width: 80%;
  height: 80vh;
}

.share-modal-bg .share-msg {
  widh: 100%;
  text-align: center;
  color: #f9f9f9;
  margin-top: 10px;
}

.btn-openset {
  display: flex;
  justify-content: space-around;
  font-size: 30rpx;
  margin-top: 60rpx;
}

.set-title {
  font-size: 30rpx;
  margin-top: 40rpx;
}

.open-set-inner {
  width: 500rpx;
  height: 300rpx;
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  margin: auto;
  background: #ffffff;
  padding: 30rpx;
}

.btn-openset > view:nth-child(1) {
  color: #919191;
}

.button-style {
  width: 100%;
  height: 100%;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 0 0;
  padding: 14px;
  font-size: 30rpx;
  line-height: 0;
  color: #666;
}

button::after {
  border: 0;
}

.save-picture,
.clear-picture,
.color-picture,
.set-grid-gap,
.set-share-title {
  position: absolute;
  right: 20px;
  bottom: 60px;
  z-index: 99;
  width: 45px;
  height: 45px;
  border-radius: 50px;
  background-color: #e54d42;
}

.save-picture {
  bottom: 120px;
}

.clear-picture {
  bottom: 180px;
}

.set-grid-gap {
  bottom: 240px;
}

.set-share-title {
  bottom: 300px;
}

input {
  border: 1px solid #ccc;
  height: 35px;
  line-height: 35px;
  padding: 0 12px;
}

.show-canvas {
  display: block;
  translate: 1s all;
}

.hide-canvas {
  display: none;
  translate: 1s all;
}

.setting-pane {
  width: 100%;
  height: 100vh;
}

.view-canvas-info {
  position: absolute;
  left: 20px;
  bottom: 60px;
  z-index: 1;
  background: #ffffff;
}

.open-setting {
  position: absolute;
  left: 0;
  bottom: 0;
  z-index: 99999;
  padding: 20px;
  background: #fff;
  width: 100%;
  height: 100vh;
}

.open-setting .radio {
  width: calc(100% - 20px);
  padding: 10px;
  border-bottom: 1px solid #ccc;
}

.open-setting .radio text {
  margin-left: 12px;
}

.open-setting-color {
  position: absolute;
  left: 0;
  bottom: 0;
  z-index: 99999;
  padding: 20px;
  background: #fff;
  width: 100%;
  height: 90vh;
}

.open-setting-color .open-setting-color__bd {
  margin-bottom: 30px;
}

.open-setting-color .section_gap {
  margin-bottom: 10px;
}

.open-setting-color .section__title {
  line-height: 32px;
  font-weight: bolder;
  font-size: 14px;
}
