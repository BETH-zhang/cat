//wxss

.share-canvas {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  z-index: 1;
}

.main-canvas {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  z-index: 3;
}

.show-canvas {
  display: block;
  translate: 1s all;
}

.hide-canvas {
  display: none;
  translate: 1s all;
}
