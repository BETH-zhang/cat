<scroll-view scroll-y class="scrollPage">
  <button style='position:relative;margin-top:50rpx' bind:tap='createTemplate' data-cur="1">模版1</button>
  <button style='position:relative;margin-top:50rpx' bind:tap='createTemplate' data-cur="2">模版2</button>
  <button style='position:relative;margin-top:50rpx' bind:tap='createTemplate' data-cur="3">模版3</button>
  <button style='position:relative;margin-top:50rpx' bind:tap='createTemplate' data-cur="4">模版4</button>
  <button style='position:relative;margin-top:50rpx' bind:tap='createTemplate' data-cur="5">模版5</button>
  <view style='position: relative;'>
    <painter customStyle='position: absolute; left: -9999rpx;' palette="{{template}}" bind:imgOK="onImgOK" widthPixels="1000"/>
    <image src="{{image}}" style="width: 654rpx; height: 1000rpx; margin-left:40rpx;"/>
    <button style='position:relative;margin-top:50rpx' bind:tap='saveImage'>保存</button>
  </view>
</scroll-view>