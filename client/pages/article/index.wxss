.UCenter-bg {
  background-size: cover;
  height: 700rpx;
  display: flex;
  justify-content: center;
  padding-top: 40rpx;
  overflow: hidden;
  position: relative;
  flex-direction: column;
  align-items: center;
  color: #fff;
  font-weight: 300;
  text-shadow: 0 0 3px rgba(0,0,0,0.3);
}
.UCenter-bg text{
  font-weight: bolder;
}
.UCenter-bg image {
  width: 180rpx;
  height: 180rpx;
  background: #ffffff;
  border-raduis: 50%;
}

.UCenter-bg .cuIcon-back {
  position: absolute;
  top: 60rpx;
  left: 60rpx;
}

.UCenter-bg .animation-wave {
  position: absolute;
  bottom: 0;
}

.UCenter-bg .logo-box {
  border-radius: 50%;
  overflow: hidden;
  width: 180rpx;
  height: 180rpx;
  margin-bottom: 12rpx;
}
