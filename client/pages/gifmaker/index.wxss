/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

.img_sm{
  width: 50rpx;
  height: 50rpx;
  margin:10rpx 0rpx 0rpx 10rpx;
}

.horizontal_center{
  display:flex;
  justify-content: center;
}

.horizontal{
  display:flex;
}

.pt10{
  padding-top: 10rpx;
}
.p10{
  padding:10rpx;
}

.p5{
  padding-top: 5rpx;
}

.tp10{
  padding-top: 10rpx;
}

.reload,.album,.trash{
  width:46rpx;
  height:46rpx;
  padding: 10rpx;
  border-radius: 34rpx;
  background: white;
  border: 1px solid #c6c6c6; 
  margin-top: 32rpx;
  position: absolute;
}

.link_faceoff{
  padding-right: 26rpx;
  padding-left: 16rpx;
  position: absolute;
  right: 23rpx;
  margin-top: 110rpx;
  display: flex;
  border: solid 1px #c6c6c6;
  border-radius: 45rpx;
  background: linear-gradient(0deg, #dddfe0, white);
}
.link_faceoff image{
  width: 58rpx;
  height: 58rpx;
}
.link_faceoff text{
  font-size: 30rpx;
  padding-top: 10rpx;
  padding-right: 10rpx;
  padding-left: 10rpx;
  color: #4f322c;
}

.reload{
  right: 23rpx;
}

.album{
  right: 104rpx;
}

.trash{
  right: 187rpx;
}
.trash:active, .album:active, .reload:active{
  background: eee;
  border: 2px solid #c6c6c6; 
}

.photo{
  width: 100rpx;
  height: 100rpx;
  border:solid 2px #fefefe;
  border-radius: 32rpx;
  margin-right: 1px;
}

.arrow-down{
  margin-left: 5px;
  width: 12rpx;
  height: 12rpx;
  /* background: rgba(255, 0,0,0.1); */
  border-color:#969696;
  border-width: 0 0 4rpx 4rpx;
  border-style: solid;
  transform:rotateZ(-45deg);
}

.picker_text{
  font-size: 26rpx;
  text-align: center;
}
.picker_text_parent{
  border: 1px solid #c6c6c6; 
  border-radius: 36rpx;
  display: flex;
  width:68rpx;
  height: 68rpx;
  align-items: center;
  justify-content: center;  
}
.picker{
  left: 20rpx;
  position: absolute;
  margin-top: 26rpx;
}
.picker_text_img_size{
  font-size: 20rpx;
}
.image_size{
  margin-top: 110rpx;
}

.make{
  position: absolute;
  left: 104rpx;
  margin-top: 26rpx;
  font-size: 26rpx;
  border: 1px solid #c6c6c6; 
  border-radius: 36rpx;
  display: flex;
  padding: 0px;
  height: 68rpx;
  background: #fff;
  color: black;
  width: 68rpx;
  align-items: center;
  justify-content: center;  
}

.make1{
  left: 196rpx;
}
.make3{
  margin-top: 110rpx;
  left: 196rpx;
}
.make2{
  font-size: 24rpx;
  margin-top: 110rpx;
}

.gif{
  width:100rpx;
  height:52rpx;
  left: 160rpx;
  position: absolute;
  margin-top: 60rpx;
}

.btn1{
  width:148rpx;
  height: 148rpx;
  margin: 20rpx;
  border-radius: 74rpx;
  display: flex;
  margin-top: 30rpx;
  box-shadow:0px 0px 24rpx #e64c3c;
}
.make:active{
  background: #eee;
  color: #000;
}

.btn1:active{
  box-shadow:0px 0px 24rpx #e64c3c;
  opacity: 0.9;
}

.btn2{
  width:100%;
  margin-left: 12rpx;
  margin-right: 24rpx;
}

.circle{
  border: 1px solid #c6c6c6; 
  border-radius: 100rpx;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  padding-left: 160rpx;
  padding-right: 160rpx;
  margin-top: 20rpx;
  color: #c6c6c6;
  background-color: white;
}

.text_color{
  font-size: 32rpx;
}

.picker-arrow{
  width: 0;
  height: 0;
  border-width: 20rpx;
  border-style: solid;
  border-color: #c6c6c6 transparent transparent transparent;
  margin-top: 20rpx;
}
.picker-text-parent{
  border: 1px solid #c6c6c6; 
  border-radius: 20rpx;
  display: flex;
  padding-left: 20rpx;
  padding-right: 20rpx;
}

.input-view input{
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}

.input-view{
  line-height: 70rpx;
  font-size: 18px;
  position: absolute;
  top:100vw;
  bottom: 100vh;
  width:90%;
  height: 330rpx;
  z-index: 20;
  border: solid 1px #b2b2b2;
  background: rgb(253, 253, 253);
  box-shadow:0px 0px 24rpx #333333;
  margin-left: 3%;
  margin-right: 3%;
  margin-top: 2%;
  border-radius: 20rpx;
  padding-top: 50rpx;
  padding-left: 40rpx;
}

.preview-dialog{
  background: rgb(253, 253, 253);
  /* position: absolute; */
  /* left: 50%; */
  /* top: 95%; */
  border: solid 1px #b2b2b2;
  border-radius: 20rpx;
  width: 600rpx;
  height: 660rpx;
  margin: 30rpx auto;
  /* margin-left: -300rpx; */
  box-shadow:0px 0px 24rpx #333333;
}

.preview-dialog image,cover-image{
  width: 300rpx;
  height: 300rpx;
  margin-left: 150rpx;
}

.preview-dialog .buttons{
  display: flex;

}

.preview-dialog .text{
  display: block;
  text-align: center;
  padding: 0rpx;
  margin: 0rpx;
}

.preview-dialog .title{
  font-size: 36rpx;
  line-height: 100rpx;
  padding: 0rpx;
  margin: 0rpx;
}

.preview-dialog .tip{
  color: #999999;
  font-size: 36rpx;
  line-height: 70rpx;
}

.preview-dialog button{
  width: 240rpx;
}

.preview-dialog button.preview{
  color: #3ec621;
}

.shaer-app{
  position: absolute;
  top: 150rpx;
  left: 22rpx;
  display: block;
  width: 710rpx;
  background: #fff;
  height: 810rpx;
  z-index: 9;
  box-shadow:0px 0px 24rpx #333333;
  border-radius: 70rpx;
  border: 1px solid #c6c6c6;
}
.shaer-app cover-image{
  width: 500rpx;
  height: 500rpx;
  margin-left: 100rpx;
  margin-top: 10%;
}
.shaer-app .share-tip{
  display: block;
  padding: 10rpx;
  text-align: center;
}
.shaer-app .about{
  display: block;
  text-align: center;
  font-size: 30rpx;
  line-height: 60rpx;
  color: #ccc;
}
.shaer-app button{
  display: block;
  min-width: 260rpx;
}