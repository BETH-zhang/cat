page{
  background: #f5f5f5;
}
canvas{
  position: fixed;
  top: -10000px;
  width:1800px;
  height:2400px;
  background: #fff;
}

image{
  margin: 0 75rpx;
  width: 600rpx;
  height: 800rpx;
  background: #fff;
  box-shadow: 0 0 2px rgba(0,0,0,.2);
  border-radius:4px; 
}
.tips{
  margin: 10px 0;
  text-align: center;
  color: #454A4E;
  font-size: 16px;
}

.button-text{
  margin: 10px auto 0;
  width: 200px;
  height: 30px;
  line-height: 30px;
  color: #F53061;
  font-size: 16px;
  font-weight: bold;
  background: transparent;
}
.text-modal{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 240px;
  background: #fff;
  box-shadow: -2px 0 5px rgba(0,0,0,0.2);
  border-radius:10px 10px 0 0; 
  transition: bottom .3s;
  box-sizing: border-box;
  padding: 30px 40px;
}
.modal-tools{
  display: flex;
}
.input-wrap{
  margin-top: 20px;
}
.modal-tools>button{
  flex: 1;
  border-radius:4px;
}

button+button{
  margin-left: 40px;
}
.button-cancel{
  background: #D7D3D2;
  color: #fff;
}
.button-confirm{
  background: #F53061;
  color: #000;
}

.input-wrap > input{
  border: 2px solid #D7D3D2;
  height: 50px;
  padding: 0 10px;
  border-radius:4px; 
}
.modal-color{
  margin-top: 20px;
  display: flex;
}
.modal-color > .color{
  flex: 1;
  height: 40px;
  padding: 15px;
  box-sizing: border-box;
  border-radius:4px; 
}
.modal-color .color+.color{
  margin-left: 10px;
}
.modal-color .color .color-select{
  height: 10px;
  background: #fff;
  border-radius:4px; 
}